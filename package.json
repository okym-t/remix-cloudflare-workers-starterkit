{
  "name": "remix-template-cloudflare-workers",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "build": "remix build",
    "build:css": "tailwindcss -m -i ./styles/tailwind.css -o app/styles/tailwind.css",
    "deploy": "npm run build:css && npm run build && wrangler publish",
    "dev:remix": "remix watch",
    "dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/tailwind.css",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev": "concurrently \"npm run build\" \"run-p dev:*\"",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "lint": "eslint --ext .tsx,.ts app/",
    "lintfix": "npm run lint -- --fix",
    "format": "prettier --write \"./app/**/*.{ts,tsx}\"",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "e2e:all": "playwright test",
    "e2e:chromium": "playwright test --project=chromium"
  },
  "dependencies": {
    "@remix-run/cloudflare": "1.6.1",
    "@remix-run/cloudflare-workers": "1.6.1",
    "@remix-run/react": "1.6.1",
    "cross-env": "7.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "3.13.0",
    "@playwright-testing-library/test": "4.2.1",
    "@playwright/test": "1.22.2",
    "@remix-run/dev": "1.6.1",
    "@remix-run/eslint-config": "1.6.1",
    "@testing-library/dom": "8.14.0",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.3.0",
    "@testing-library/user-event": "14.2.1",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "@vitejs/plugin-react": "1.3.2",
    "autoprefixer": "10.4.7",
    "c8": "7.11.3",
    "concurrently": "7.2.2",
    "eslint": "8.18.0",
    "eslint-config-prettier": "8.5.0",
    "happy-dom": "5.3.2",
    "miniflare": "2.5.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.14",
    "prettier": "2.7.1",
    "tailwindcss": "3.1.4",
    "typescript": "4.7.4",
    "vite": "2.9.12",
    "vite-tsconfig-paths": "3.5.0",
    "vitest": "0.16.0",
    "wrangler": "2.0.15"
  },
  "engines": {
    "node": ">=14"
  }
}
