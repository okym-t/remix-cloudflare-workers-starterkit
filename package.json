{
  "name": "remix-template-cloudflare-workers",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "build": "remix build",
    "build:css": "tailwindcss -m -i ./styles/tailwind.css -o app/styles/tailwind.css",
    "deploy": "npm run build:css && npm run build && wrangler publish",
    "dev:remix": "remix watch",
    "dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/tailwind.css",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev": "concurrently \"npm run build\" \"run-p dev:*\"",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "lint": "eslint --ext .tsx,.ts app/",
    "lintfix": "npm run lint -- --fix",
    "format": "prettier --write \"./app/**/*.{ts,tsx}\"",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "e2e:all": "playwright test",
    "e2e:chromium": "playwright test --project=chromium"
  },
  "dependencies": {
    "@remix-run/cloudflare": "1.8.2",
    "@remix-run/cloudflare-workers": "1.8.2",
    "@remix-run/react": "1.8.2",
    "cross-env": "7.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "3.19.0",
    "@playwright-testing-library/test": "4.5.0",
    "@playwright/test": "1.34.3",
    "@remix-run/dev": "1.8.2",
    "@remix-run/eslint-config": "1.8.2",
    "@testing-library/dom": "9.3.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.4",
    "@vitejs/plugin-react": "2.2.0",
    "autoprefixer": "10.4.14",
    "c8": "7.14.0",
    "concurrently": "8.1.0",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "happy-dom": "9.20.3",
    "miniflare": "2.14.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.24",
    "prettier": "2.8.8",
    "tailwindcss": "3.3.2",
    "typescript": "4.9.5",
    "vite": "3.2.7",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.31.4",
    "wrangler": "3.0.1"
  },
  "engines": {
    "node": ">=14"
  }
}
